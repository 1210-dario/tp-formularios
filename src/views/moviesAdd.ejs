<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
    </figure>
    <h1 class="moviesAddTitulo"></h1>
    <br>
    <section id="formulario">
        <article>
            <form action="/movies/create" method="POST" id="form">
                <label for="title">Titulo </label>
                <p><input type="text" name="title" id="title"></p>
                <span id="invalid-title"></span>
                <label for="rating">Calificación </label>
                <p><input type="number" name="rating" id="rating"> </p>
                <span id="invalid-rating"></span>
                <label for="awards">Premios </label>
                <p><input type="number" name="awards" id="awards" required></p>
                <span id="invalid-awards"></span>
                <label for="release_date">Fecha de creación </label>
                <p><input type="date" name="release_date" id="release_date" required></p>
                <span id="invalid-release_date"></span>
                <label for="length">Duración </label>
                <p><input type="number" name="length" id="length" required></p>
                <span id="invalid-length"></span>
                <label for="genreID">Género </label>
                <p>
                    <select name="genre_id" id="genre" required>
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre=> { %>
                            <option value="<%= genre.id %>">
                                <%= genre.name %>
                            </option>
                            <% }); %>
                    </select>
                </p>
                <span id="invalid-genre"></span>
                <br>
                <p> <button class="botonAgregar" type="submit">Agregar</button>

                    <a class="botonVolver" href="/movies">Listado de Películas</a>
                </p>
            </form>
            <ul class="errores"></ul>
        </article>
    </section>
    <script src="/js/moviesAddValidation.js"></script>
</body>

</html>